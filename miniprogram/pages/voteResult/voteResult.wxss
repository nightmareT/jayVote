.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  font-family: 'Source Han Sans CN', Tahoma, Geneva, Verdana, sans-serif;
  color: rgba(0, 0, 0, 0.5);
  background: black;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}

.background {
  width: 95%;
  height: 95vh;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 2.5vh
  /* transform: translateY(-50%) */
}

.share {
  position: fixed;
  left: 10rpx;
  top: 10rpx;
  color: rgba(255, 255, 255, 0.7);
  /* transform: translateX(-50%) */
}

.logo {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 80rpx;
  width: 280px;
  transform: translateX(-50%);
  font-size: 30px;
  color: white;
}

.topSongName {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 240rpx;
  transform: translateX(-50%);
  font-size: 18px;
  color: white;
}


.describe {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  bottom: 290rpx;
  transform: translateX(-50%);
  height: 18px;
}

.songName {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 100rpx;
  transform: translateX(-50%);
  font-size: 18px;
  width: 400rpx;
  color: white;
}

.songName1 {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 240rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 48vh;
  transform: translateX(-50%);
  font-size: 18px;
  color: white;
}

.vote {
  position: fixed;
  bottom: 5%;
  left: 50%;
  width: 250rpx;
  border-radius: 11px;
  font-size: 18px;
  color: white;
  text-align: center;
  line-height: 100rpx;
  border: 1px white solid;
  background: rgba(0, 0, 0, 0);
  height: 100rpx;
  /* animation: mymove 4s ease-in-out infinite; */
  transform: translateX(-50%);
}

@keyframes mymove {
  0% {
    right: 20rpx;
    opacity: 100%;
  }
  50% {
    right: 0rpx;
    opacity: 30%;
  }
  100% {
    right: 20rpx;
    opacity: 100%;
  }
}