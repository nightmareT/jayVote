.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  font-family: 'Source Han Sans CN', Tahoma, Geneva, Verdana, sans-serif;
  color: rgba(0, 0, 0, 0.5);
  background: black;
  overflow: hidden;
}

.background {
  width: 95%;
  height: 95vh;
  position: absolute;
  top: 2.5vh
  /* transform: translateY(-50%) */
}

.share {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  color: rgba(255, 255, 255, 0.7);
  /* transform: translateX(-50%) */
}

.logo {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 80rpx;
  width: 280px;
  transform: translateX(-50%);
  font-size: 30px;
  color: white;
}

.topSongName {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 240rpx;
  transform: translateX(-50%);
  font-size: 18px;
  color: white;
}


.describe {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  bottom: 290rpx;
  transform: translateX(-50%);
  height: 18px;
}


.more {
  position: absolute;
  bottom: 30%;
  right: 20rpx;
  height: 200rpx;
  width: 50rpx;
  animation: mymove 4s ease-in-out infinite;
  transform: translateY(-30%);
}

@keyframes mymove {
  0% {
    right: 20rpx;
    opacity: 100%;
  }
  50% {
    right: 0rpx;
    opacity: 30%;
  }
  100% {
    right: 20rpx;
    opacity: 100%;
  }
}