<!--index.wxml-->
<view class="container">
  <view class="avator">
    <image class="album" src="../../images/album1.JPG" mode="scaleToFill" lazy-load="false" binderror="" bindload="">
      <view class="share">选出你心中的杰伦TOP5 | 和好友一起分享 </view>
      <view class="topDes">实时TOP{{index}}</view>
      <view class="topSongName">龙卷风</view>
    </image>
  </view>
  <image class="selector" src="../../images/background.jpg" mode="scaleToFill" >
    <view class="yourChoice" hover-class="none" hover-stop-propagation="false">
      你的选择
    </view>
    <image class="selectPic" src="../../images/album{{albumIndex}}.JPG" bindtap="showModal">
    </image>
    <picker bindchange="bindPickerChange" class="songName" mode="selector" range="{{songList}}" value="{{songIndex}}" >
      <view class="picker">
        {{songList[songIndex]}}
      </view>
    </picker>
    <image class="more" src="../../images/dropDown.png"></image>
  </image>
</view>
