.albumSelect {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(15, 15, 15, 0.62);
  display: flex;
  align-items: center;
  left: 0;
  top: 0;
  z-index: 1000;
}

.albumBlank {
  height: 280rpx;
  width: 100%; 
  justify-content: flex-start;
  flex-wrap: nowrap;
  display: flex;
  overflow: auto;
}

.album {
  width: 210rpx;
  height: 280rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
  overflow: hidden;
}

.albumPic {
  width: 100%;
  height: 220rpx;
}

.albumName {
  width: 100%;
  height: 60rpx;
  position: relative;
  bottom: 12rpx;
  background: rgba(19, 18, 18, 0.38);
  color: white;
  text-align: center;
  line-height: 60rpx;
  font-size: 16px;
}