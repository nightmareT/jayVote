.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: white;
  overflow: hidden;
}

.section {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.avator {
  display: flex;
  width: 750rpx;
  height: 852rpx;
}

.album {
  width: 100%;
  height: 852rpx;
}

.share {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  color: white;
  /* transform: translateX(-50%) */
}

.topDes {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 140rpx;
  transform: translateX(-50%);
  font-size: 30px;
  color: white;
}

.topSongName {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  top: 240rpx;
  transform: translateX(-50%);
  font-size: 18px;
  font-family: 'webfont'!important;
  color: white;
}

.selector {
  width: 100%;
  height: 354rpx;
  overflow: hidden;
}

.yourChoice {
  position: absolute;
  /* text-align: center; */
  left: 50%;
  bottom: 290rpx;
  transform: translateX(-50%);
  font-size: 18px;
  color: white;
  font-weight: bold;
}

.selectPic {
  position: absolute;
  /* text-align: center; */
  left: 52rpx;
  bottom: 82rpx;
  width: 208rpx;
  height: 220rpx;
}

.albumName {
  position: absolute;
  /* text-align: center; */
  background: rgba(19, 18, 18, 0.38);
  color: white;
  font-size: 16px;
  text-align: center;
  line-height: 50rpx;
  left: 52rpx;
  bottom: 32rpx;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 208rpx;
}

.songName {
  position: absolute;
  /* text-align: center; */
  right: 120rpx;
  bottom: 160rpx;
  font-size: 18px;
  color: white;
  width: 260rpx;
  height: 30rpx;
}

.more {
  position: absolute;
  bottom: 30%;
  right: 20rpx;
  height: 200rpx;
  width: 50rpx;
  animation: mymove 4s ease-in-out infinite;
  transform: translateY(-50%);
}

@keyframes mymove {
  0% {
    right: 20rpx;
    opacity: 100%;
  }
  50% {
    right: 0rpx;
    opacity: 30%;
  }
  100% {
    right: 20rpx;
    opacity: 100%;
  }
}